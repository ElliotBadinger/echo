<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recording_done_title"
        android:id="@+id/payment_method_dialog_title"
        android:layout_gravity="center_horizontal"
        android:tag="titleBar"
        android:textSize="25sp"
        android:gravity="center"
                 />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/payment_method_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_round"
                android:tag="bold"
                android:text="@string/recording_done_filename" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recording_done_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_round"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="@string/recording_done_directory" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recording_done_dirname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/recording_done_open_dir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                                                            android:src="@drawable/ic_action_collection"
                    android:textSize="@dimen/info_text_size" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_round"
                android:tag="bold"
                android:text="@string/recording_done_runtime" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recording_done_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_round"
                android:tag="bold"
                android:text="@string/recording_done_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recording_done_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_round"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recording_done_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_round"
                    android:layout_weight="1"
                                        android:drawableStart="@drawable/ic_action_send_now"
                                        android:text="@string/send"
                                        android:textSize="@dimen/info_text_size" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recording_done_play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                                        android:drawableStart="@drawable/ic_action_play"
                                        android:text="@string/open"
                                        android:textSize="@dimen/info_text_size" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>